@model OnlineShop.Controllers.ProfileViewModel

@{
    ViewData["Title"] = "Profilul meu";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<form asp-action="Profile" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Roluri:</label>
        <ul>
            @foreach (var role in Model.Roles)
            {
                <li>@role</li>
            }
        </ul>
    </div>

    <button type="submit" class="btn btn-primary">Actualizează profilul</button>
</form>
@if (Model.Roles.Contains("User"))
{
    <form asp-action="RequestCollaborator" method="post">
        <button type="submit" class="btn btn-primary">
            Cere acces să devii colaborator
        </button>
    </form>
}
<p class="mt-3">
    <a asp-action="ChangePassword" asp-controller="Account">Schimbă parola</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
