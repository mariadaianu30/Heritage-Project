@model IEnumerable<OnlineShop.Models.Order>
@{
    ViewData["Title"] = "Comenzile mele";
    bool isAdmin = ViewBag.IsAdmin ?? false;
}

<h1 class="mb-4"><i class="fas fa-box me-2"></i>Comenzile mele</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Nu există comenzi de afișat.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Data</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Produse</th>
                    <th>Acțiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@order.TotalAmount.ToString("N2") RON</td>
                        <td>
                            @switch (order.Status)
                            {
                                case OnlineShop.Models.OrderStatus.Pending:
                                    <span class="badge bg-warning text-dark">În așteptare</span>
                                    break;
                                case OnlineShop.Models.OrderStatus.Processing:
                                    <span class="badge bg-primary">In procesare</span>
                                    break;
                                case OnlineShop.Models.OrderStatus.Shipped:
                                    <span class="badge bg-info text-dark">Expediată</span>
                                    break;
                                case OnlineShop.Models.OrderStatus.Delivered:
                                    <span class="badge bg-success">Livrată</span>
                                    break;
                                case OnlineShop.Models.OrderStatus.Cancelled:
                                    <span class="badge bg-danger">Anulată</span>
                                    break;
                            }
                        </td>
                        <td>
                            @foreach (var item in order.OrderItems)
                            {
                                <div>
                                    <strong>@item.Product?.Title</strong> x @item.Quantity
                                </div>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary me-1" title="Detalii">
                                <i class="fas fa-eye"></i>
                            </a>

                            @if (!isAdmin && order.Status == OnlineShop.Models.OrderStatus.Pending)
                            {
                                <form asp-action="Cancel" asp-route-id="@order.Id" method="post" class="d-inline" onsubmit="return confirm('Ești sigur că vrei să anulezi această comandă?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Anulează">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </form>
                            }

                            @if (isAdmin)
                            {
                                <form asp-action="UpdateStatus" asp-route-id="@order.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <select name="status" class="form-select form-select-sm d-inline w-auto" onchange="this.form.submit()">
                                        @foreach (var s in Enum.GetValues(typeof(OnlineShop.Models.OrderStatus)).Cast<OnlineShop.Models.OrderStatus>())
                                        {
                                            <option value="@s" selected="@(order.Status == s)">@s</option>
                                        }
                                    </select>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
