@model OnlineShop.Models.Category

@{
    ViewData["Title"] = "Adaugă categorie";
}

<h1 class="mb-4">Adaugă categorie</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Imagine categorie</label>
        <input type="file" name="image" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Adaugă
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Anulează</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
