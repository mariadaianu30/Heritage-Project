@model IEnumerable<Product>
@{
    ViewData["Title"] = "Produse";
    var categories = ViewBag.Categories as List<Category> ?? new List<Category>();
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var search = ViewBag.Search as string;
    var categoryId = ViewBag.CategoryId as int?;
    var sortOrder = ViewBag.SortOrder as string;
}

@* Hero Section *@
<section class="hero-section">
    <div class="hero-content">
        <h1 class="hero-headline">Descoperă Colecția</h1>
        <p class="section-subtitle">Piese vintage cu eleganță atemporală</p>
    </div>
</section>

@* New Arrivals Section *@
@if (string.IsNullOrEmpty(search) && !categoryId.HasValue && currentPage == 1)
{
    var newArrivals = Model.Take(12).ToList();
    if (newArrivals.Any())
    {
        <section class="new-arrivals-section mb-5">
            <h2 class="section-title">Noutăți</h2>
            <p class="section-subtitle">Cele mai recente adăugiri în colecție</p>

            <div id="newArrivalsCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @{
                        var chunks = newArrivals
                        .Select((product, index) => new { product, index })
                        .GroupBy(x => x.index / 4)
                        .Select(g => g.Select(x => x.product).ToList())
                        .ToList();
                    }

                    @for (int i = 0; i < chunks.Count; i++)
                    {
                        var chunk = chunks[i];
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <div class="row row-cols-1 row-cols-md-4 g-4">
                                @foreach (var product in chunk)
                                {
                                    <div class="col">
                                        <div class="card product-card h-100">
                                            <div class="product-image-wrapper position-relative">
                                                @if (!string.IsNullOrEmpty(product.ImagePath))
                                                {
                                                    <img src="@product.ImagePath" class="card-img-top product-image" alt="@product.Title">
                                                }
                                                else
                                                {
                                                    <div class="card-img-top product-image-placeholder d-flex align-items-center justify-content-center">
                                                        <i class="fas fa-image fa-3x text-muted"></i>
                                                    </div>
                                                }
                                                <div class="product-overlay">
                                                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-light btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (User.Identity?.IsAuthenticated == true && product.Stock > 0 && !User.IsInRole("Admin"))
                                                    {
                                                        <form asp-controller="Carts" asp-action="Add" method="post" class="d-inline">
                                                            <input type="hidden" name="productId" value="@product.Id" />
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-primary btn-sm me-1">
                                                                <i class="fas fa-cart-plus"></i>
                                                            </button>
                                                        </form>
                                                        <form asp-controller="Wishlists" asp-action="Add" method="post" class="d-inline">
                                                            <input type="hidden" name="productId" value="@product.Id" />
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                                <i class="fas fa-heart"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </div>
                                            <div class="card-body d-flex flex-column">
                                                @if (product.Category != null)
                                                {
                                                    <span class="product-brand">@product.Category.Name</span>
                                                }
                                                <h5 class="card-title">
                                                    <a asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none">
                                                        @product.Title
                                                    </a>
                                                </h5>
                                                <div class="d-flex justify-content-between align-items-center mt-auto pt-3 border-top">
                                                    <span class="product-price">
                                                        @product.Price.ToString("N2") <small class="fw-normal">RON</small>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                @if (chunks.Count > 1)
                {
                    <button class="carousel-control-prev" type="button" data-bs-target="#newArrivalsCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#newArrivalsCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                }
            </div>
        </section>
    }
}

@* Categories Section *@
@if (string.IsNullOrEmpty(search) && !categoryId.HasValue && categories.Any())
{
    <section class="categories-section mb-5">
        <h2 class="section-title">Categorii</h2>
        <p class="section-subtitle">Explorează colecția noastră</p>
        <div class="row row-cols-2 row-cols-md-4 g-4">
            @foreach (var category in categories.Take(8))
            {
                <div class="col">
                    <a asp-action="Index" asp-route-categoryId="@category.Id" class="text-decoration-none">
                        <div class="category-card card">
                            <div class="category-image-wrapper position-relative" style="aspect-ratio: 4/5;">
                                @if (!string.IsNullOrEmpty(category.ImagePath))
                                {
                                    <img src="@category.ImagePath"
                                         alt="@category.Name"
                                         class="w-100 h-100"
                                         style="object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="w-100 h-100 d-flex align-items-center justify-content-center"
                                         style="background-color: var(--color-ecru);">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                    </div>
                                }

                                <div class="category-overlay">
                                    <h3 class="category-name">@category.Name</h3>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </section>
}

@* Filters Section *@
<section class="filters-section mb-4">
    <div class="card">
        <div class="card-body">
            <form asp-action="Index" method="get" id="filterForm">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label fw-semibold"><i class="fas fa-filter me-1"></i>Categorie</label>
                        <select name="categoryId" class="form-select" onchange="document.getElementById('filterForm').submit()">
                            <option value="">Toate categoriile</option>
                            @foreach (var cat in categories)
                            {
                                <option value="@cat.Id" selected="@(categoryId == cat.Id)">@cat.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-semibold"><i class="fas fa-sort me-1"></i>Sortare</label>
                        <select name="sortOrder" class="form-select" onchange="document.getElementById('filterForm').submit()">
                            <option value="newest" selected="@(sortOrder == "newest" || string.IsNullOrEmpty(sortOrder))">Cele mai noi</option>
                            <option value="price_asc" selected="@(sortOrder == "price_asc")">Preț: crescător</option>
                            <option value="price_desc" selected="@(sortOrder == "price_desc")">Preț: descrescător</option>
                            <option value="rating_desc" selected="@(sortOrder == "rating_desc")">Rating: descrescător</option>
                            <option value="rating_asc" selected="@(sortOrder == "rating_asc")">Rating: crescător</option>
                        </select>
                    </div>
                    @if (!string.IsNullOrEmpty(search))
                    {
                        <input type="hidden" name="search" value="@search" />
                    }
                    <div class="col-md-4">
                        <a asp-action="Index" class="btn btn-outline-secondary w-100"><i class="fas fa-times me-1"></i>Resetează filtrele</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@* Active Filters Display *@
@if (!string.IsNullOrEmpty(search) || categoryId.HasValue)
{
    <div class="active-filters mb-4">
        <div class="d-flex flex-wrap gap-2 align-items-center">
            <span class="text-muted">Filtre active:</span>
            @if (!string.IsNullOrEmpty(search))
            {
                <a asp-action="Index" asp-route-categoryId="@categoryId" asp-route-sortOrder="@sortOrder" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-search me-1"></i>"@search"
                    <i class="fas fa-times ms-1"></i>
                </a>
            }
            @if (categoryId.HasValue)
            {
                var catName = categories.FirstOrDefault(c => c.Id == categoryId)?.Name ?? "Categorie";
                <a asp-action="Index" asp-route-search="@search" asp-route-sortOrder="@sortOrder" class="btn btn-sm btn-outline-info">
                    <i class="fas fa-tag me-1"></i>@catName
                    <i class="fas fa-times ms-1"></i>
                </a>
            }
        </div>
    </div>
}

@* Products Grid *@
<section class="products-section">
    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card product-card h-100">
                        <div class="product-image-wrapper position-relative">
                            @if (!string.IsNullOrEmpty(product.ImagePath))
                            {
                                <img src="@product.ImagePath" class="card-img-top product-image" alt="@product.Title">
                            }
                            else
                            {
                                <div class="card-img-top product-image-placeholder d-flex align-items-center justify-content-center">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }

                            @if (product.Stock <= 0 && !User.IsInRole("Admin"))
                            {
                                <span class="badge bg-danger position-absolute top-0 end-0 m-2">Stoc epuizat</span>
                            }
                   

                            <div class="product-overlay">
                                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-light btn-sm me-1">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @if (User.Identity?.IsAuthenticated == true && product.Stock > 0 && !User.IsInRole("Admin"))
                                {
                                    <form asp-controller="Carts" asp-action="Add" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-primary btn-sm me-1">
                                            <i class="fas fa-cart-plus"></i>
                                        </button>
                                    </form>
                                    <form asp-controller="Wishlists" asp-action="Add" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-heart"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>

                        <div class="card-body d-flex flex-column">
                            @if (product.Category != null)
                            {
                                <span class="product-brand">@product.Category.Name</span>
                            }
                            <h5 class="card-title">
                                <a asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none">
                                    @product.Title
                                </a>
                            </h5>
                            <div class="d-flex justify-content-between align-items-center mt-auto pt-3 border-top">
                                <span class="product-price">
                                    @product.Price.ToString("N2") <small class="fw-normal">RON</small>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="empty-state">
                <i class="fas fa-search fa-4x text-muted mb-4"></i>
                <h3 class="text-muted">Nu am găsit produse</h3>
                <p class="text-muted mb-4">
                    @if (!string.IsNullOrEmpty(search))
                    {
                        <span>Nu există produse care să corespundă căutării "<strong>@search</strong>".</span>
                    }
                    else if (categoryId.HasValue)
                    {
                        <span>Nu există produse în această categorie.</span>
                    }
                    else
                    {
                        <span>Momentan nu există produse disponibile.</span>
                    }
                </p>
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>Vezi toate produsele
                </a>
            </div>
        </div>
    }
</section>

<style>
    #newArrivalsCarousel .carousel-control-prev,
    #newArrivalsCarousel .carousel-control-next {
        width: 50px;
        height: 50px;
        top: 50%;
        transform: translateY(-50%);
        background-color: black; 
        border-radius: 50%;
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0.9;
    }

    #newArrivalsCarousel .carousel-control-prev {
        left: -60px; /* mutat la marginea stângă fără suprapunere */
    }

    #newArrivalsCarousel .carousel-control-next {
        right: -60px; /* mutat la marginea dreaptă fără suprapunere */
    }

    #newArrivalsCarousel .carousel-custom-icon i {
        color: #3e2723; /* ciocolatiu închis */
        font-size: 1.5rem;
